{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "outDir": "./dist/",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "esModuleInterop": true,
        "declarationDir": "dist",
        "baseUrl": "./src" /* Base directory to resolve non-absolute module names. */,
        "paths": {
            "api": ["./api"],
            "pages": ["./pages"],
            "assets": ["./assets"],
            "helpers": ["./helpers"],
            "constants": ["./constants"],
            "components": ["./components"],
            "redux-store": ["./redux-store"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/"]
}
